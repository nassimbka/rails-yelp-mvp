<div class="container">
  <div class="row">
    <div class="col-sm">
      <h1>Review creation</h1>
      <p>You're about to create a review for restaurant <strong><%= @restaurant.name %></strong></p>

      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
        <%= f.submit 'Save', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
