<div class="container">
  <div class="row">
    <div class="col-sm">
      <h1>Restaurant</h1>
      <p>
        <strong>Name:</strong>
        <%= @restaurant.name %>
      </p>

      <p>
        <strong>Address:</strong>
        <%= @restaurant.address %>
      </p>

      <p>
        <strong>Phone number:</strong>
        <%= @restaurant.phone_number %>
      </p>

      <p>
        <strong>Category:</strong>
        <%= @restaurant.category %>
      </p>

      <%= link_to 'Edit', edit_restaurant_path(@restaurant) %> -
      <%= link_to 'All restaurants', restaurants_path %>
    </div>
  </div>
</div>
